<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="../assets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <form action="" method="post">
          <button name = "kind" value = "select" class="navbar-brand">回首頁</button>
        </form>
      </div>
    </nav>

    <div class="container mt-4">
      <h2>QRCode產生</h2>

      <!-- 選擇日期 -->
      <div class="mb-3 col-md-6">
        <label for="record_id" class="form-label">輸入病歷號:</label>
        <input type="text" class="form-control" id="record_id1" />
      </div>

      <button type="button" class="btn btn-success" id="confirm-button">
        確認
      </button>

      <div id="qrcode-container"></div>

  </body>
  <script>
    $(document).ready(function () {
      $("#confirm-button").click(function () {
        const recordId = $("#record_id1").val();
        // 确保病历号已输入
        if (recordId) {
          // 发送 AJAX 请求到后端
          $.ajax({
            url: 'http://localhost:3000/qrcode/' + recordId,  // 更新后端路由
            method: 'GET',
            success: function (html) {
              // 在页面上显示 QR 码
              $('#qrcode-container').html(html);
            },
            error: function (error) {
              console.error("Error generating QR code:", error);
              alert("生成QRcode失敗");
            }
          });
        } else {
          alert("請輸入正確的病歷號");
        }
      });
    });
  </script>
  
</html>